<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Activity的主界面-->

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout xmlns:rfal="http://schemas.android.com/apk/res-auto"
        android:id="@+id/label_list_sample_rfal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rfal:rfal_frame_alpha="0.7"
        rfal:rfal_frame_color="@color/main_activity_label_rfal_back_color">

        <FrameLayout
            android:id="@+id/main_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/label_list_sample_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/cirlc_view_margin_left"
            android:layout_marginRight="@dimen/cirlc_view_margin_left"
            rfab:rfab_color_normal="@color/main_activity_label_normal_back_color"
            rfab:rfab_color_pressed="@color/main_activity_label_pressed_back_color"
            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_shadow_color="@color/main_activity_rfab_shadow_color_color"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="@dimen/main_activity_rfab_shadow_dy"
            rfab:rfab_shadow_radius="@dimen/main_activity_rfab_shadow_radius"
            rfab:rfab_size="normal" />

    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>



</RelativeLayout>







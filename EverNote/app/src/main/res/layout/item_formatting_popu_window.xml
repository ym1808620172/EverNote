<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3d4946"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_formatting_popup_window_bold_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_bold" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_italic_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_italic" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_underline_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_underline" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_line_through_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_line_through" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_background_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_background" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_checkbox_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@mipmap/fuxuankuang" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_orderly_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_orderly" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_disorder_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_disorder" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_left_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_left" />

            <ImageView
                android:id="@+id/item_formatting_popup_window_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:src="@drawable/formatting_popup_window_right" />


        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
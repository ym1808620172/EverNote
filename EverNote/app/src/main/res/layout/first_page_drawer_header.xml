<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#01f588"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image"
                android:layout_width="@dimen/cirlc_view_height"
                android:layout_height="@dimen/cirlc_view_weight"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/cirlc_view_margin_left"
                android:layout_marginTop="@dimen/cirlc_view_margin_top"
                android:src="@mipmap/ic_huoying" />

            <TextView
                android:id="@+id/circle_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/circle_image"
                android:text="我是鸣人"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:textSize="@dimen/cirlc_view_username_text_size" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>